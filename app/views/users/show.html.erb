<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <%= render 'layouts/sidebar', user: @user, dog: @dog %>
      </div>

      <div class='col-md-8 offset-md-1'>
        <h2>投稿した画像一覧</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>タイトル</th>
              <th>写真</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @dogs.each do |dog_image| %>
              <tr>
                <td>
                  <%= link_to dog_image.user do %>
                    <%= attachment_image_tag dog_image.user, :profile_image,size:'80x80', fallback: "default-image.jpg" %>
                  <% end %>
                </td>
                <td>
                  <%= link_to dog_image_path(dog_image.id) do %>
                    <%= dog_image.title %>
                  <% end %>
                </td>
                <td>
                  <%= attachment_image_tag dog_image, :image, size:'100x80', fallback: "default-image.jpg" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>

</main>